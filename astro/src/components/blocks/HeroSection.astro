---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';
import StrapiImage from '../ui/StrapiImage.astro';
import type { HeroBlock } from '../../lib/types';

type Props = Omit<HeroBlock, '__component'>;

const { headline, subheadline, backgroundImage, primaryCta, secondaryCta, trustBadges } = Astro.props;
---
<section class="relative py-20 md:py-32 bg-gradient-to-br from-primary-950 to-primary-800 text-white overflow-hidden">
  {backgroundImage && (
    <div class="absolute inset-0 opacity-10">
      <StrapiImage image={backgroundImage} class="w-full h-full object-cover" loading="eager" />
    </div>
  )}
  <Container class="relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight mb-6">
        {headline}
      </h1>
      {subheadline && (
        <p class="text-lg md:text-xl text-primary-200 mb-8 max-w-2xl mx-auto">
          {subheadline}
        </p>
      )}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
        {primaryCta && (
          <Button href={primaryCta.url} variant="primary" size="lg" openInNewTab={primaryCta.openInNewTab}>
            {primaryCta.label}
          </Button>
        )}
        {secondaryCta && (
          <Button href={secondaryCta.url} variant="secondary" size="lg" openInNewTab={secondaryCta.openInNewTab}>
            {secondaryCta.label}
          </Button>
        )}
      </div>
      {trustBadges && trustBadges.length > 0 && (
        <div class="flex flex-wrap items-center justify-center gap-6">
          {trustBadges.map((badge) => (
            <div class="flex items-center gap-2 text-sm text-primary-200">
              {badge.icon && <StrapiImage image={badge.icon} class="h-5 w-5" />}
              <span>{badge.label}</span>
            </div>
          ))}
        </div>
      )}
    </div>
  </Container>
</section>
