---
import Container from '../ui/Container.astro';
import StrapiImage from '../ui/StrapiImage.astro';
import type { LogoCloudBlock } from '../../lib/types';

type Props = Omit<LogoCloudBlock, '__component'>;

const { title, logos } = Astro.props;
---
<section class="py-12 border-y border-neutral-200">
  <Container>
    {title && (
      <p class="text-sm text-center text-neutral-500 mb-8 font-medium">{title}</p>
    )}
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12">
      {logos?.map((logo) => (
        <StrapiImage image={logo} class="h-8 md:h-10 opacity-60 hover:opacity-100 transition-opacity grayscale hover:grayscale-0" />
      ))}
    </div>
  </Container>
</section>
