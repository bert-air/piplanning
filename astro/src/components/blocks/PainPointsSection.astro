---
import Container from '../ui/Container.astro';
import type { PainPointsBlock } from '../../lib/types';

type Props = Omit<PainPointsBlock, '__component'>;

const { sectionTitle, items } = Astro.props;
---
<section class="py-16 md:py-24 bg-neutral-50">
  <Container>
    {sectionTitle && (
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 text-center mb-12">{sectionTitle}</h2>
    )}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item) => (
        <div class="bg-white rounded-xl p-6 shadow-[var(--shadow-card)]">
          <div class="flex items-center gap-3 mb-3">
            <span class="flex items-center justify-center h-8 w-8 rounded-full bg-accent-red/10 text-accent-red text-sm font-bold">
              {item.number}
            </span>
            <h3 class="font-semibold text-neutral-900">{item.title}</h3>
          </div>
          <p class="text-sm text-neutral-600">{item.description}</p>
        </div>
      ))}
    </div>
  </Container>
</section>
