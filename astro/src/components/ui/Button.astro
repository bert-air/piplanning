---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  openInNewTab?: boolean;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  openInNewTab = false,
  class: className = '',
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold transition-all duration-200 rounded-lg';

const variantClasses: Record<string, string> = {
  primary: 'bg-primary-500 text-white hover:bg-primary-600 shadow-sm hover:shadow-md',
  secondary: 'bg-white text-primary-500 border-2 border-primary-500 hover:bg-primary-50',
  outline: 'border border-neutral-300 text-neutral-700 hover:border-primary-500 hover:text-primary-500',
  ghost: 'text-primary-500 hover:text-primary-600 underline underline-offset-4',
};

const sizeClasses: Record<string, string> = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = [baseClasses, variantClasses[variant], sizeClasses[size], className].join(' ');
const target = openInNewTab ? '_blank' : undefined;
const rel = openInNewTab ? 'noopener noreferrer' : undefined;
---

{href ? (
  <a href={href} class={classes} target={target} rel={rel}>
    <slot />
  </a>
) : (
  <button class={classes}>
    <slot />
  </button>
)}
