---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  locale?: string;
}

const {
  title = 'PI Planning | AirSaaS',
  description = 'La vue business qui manque Ã  Jira pour votre PI Planning.',
  locale = 'fr',
} = Astro.props;
---
<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot name="header" />
    <main class="flex-1">
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>
